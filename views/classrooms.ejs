<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>G School Classrooms</title>
    <style>
      body{
        font-family: arial;
        text-align: center;
      }
      ul{
        margin: 0;
        padding: 0;
      }
      li{
        display: inline-block;
        float: left;
        margin: 2%;
        padding: 2%;
        text-transform: uppercase;
      }
      .breadcrumb{
        text-align: center;
      }
      form{
        font-size: 20px;
      }
      select{
        font-size: 20px;
      }
      input{
        font-size: 20px;
      }
    </style>
  </head>
  <body>
    <h1>CLASSROOMS</h1>
    <p class="breadcrumb"><a href="/">Home</a> > Classrooms</p>
    <form action="/classrooms" method="post">
      <label for="subject">Filter :</label>
      <select name="subject">
        <% for(let i=0; i<myObject.length; i++){ %>
          <option value="<%= myObject[i].subject %>"><%= myObject[i].subject %></option>
        <% } %>
      </select>
      <input type="submit" value="Apply">
    </form>

    <% for (let i=0; i<myObject.length; i++){ %>

      <ul>

        <li><h3><a href="/classroom/<%= myObject[i].id %>"> <%= myObject[i].subject %> </a></h3></li>

      </ul>

    <% } %>

  </body>
</html>
